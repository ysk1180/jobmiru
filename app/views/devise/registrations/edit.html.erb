<div class="container">
  <br>
  <h2>編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name, :class => "label-inline" %><span class="badge badge-pill badge-danger">必須</span>
      <%= f.text_field :name, :placeholder => '必須', class:'form-control' %>
      <small class="text-muted">ニックネームをご記入下さい。</small>
    </div>

    <div class="form-group">
      <%= f.label :age %>
      <%= f.text_field :age, class:'form-control' %>
      <small class="text-muted">半角数字で入力してください。</small>
    </div>

    <div class="form-group">
      <%= f.label :sex %>
      <%= f.select :sex,[["",""],["男性","男性"],["女性","女性"]], {}, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= f.label :past_career %>
      <%= f.text_area :past_career, class:'form-control', rows:"3" %>
    </div>

    <div class="form-group">
      <%= f.label :career_plan %>
      <%= f.text_area :career_plan, class:'form-control', rows:"3" %>
    </div>

    <div class="form-group">
      <%= f.label :user_image %>
      <%= f.file_field :user_image, class:'form-control-file' %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class:"btn btn-primary" %>
    </div>
  <% end %>

  <div>
    <%= link_to :back do %>
      <i class="fa fa-arrow-circle-left fa-fw"></i> マイページへ戻る
    <% end %>
  </div>

  <br>
  <br>

  <h5>アカウントの消去</h5>
  <div>
    <%= link_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete do %>
      <i class="fa fa-trash fa-fw"></i> アカウント消去
    <% end %>
  </div>
</div>
