<% if user_signed_in? %>
  <% unless @post.user_id == current_user.id %>
    <% if @want.present? %>
      <div class="like-now floats">
        <%= link_to post_want_path(post_id: @post.id, id: @want.id), method: :delete, remote: true do %>
          <i class="fa fa-star fa-2x like-now"></i>
        <% end %>
      </div>
    <% else %>
      <div class="like-not floats">
        <%= link_to post_wants_path(post_id: @post.id), method: :post, remote: true do %>
          <i class="fa fa-star fa-2x like-not"></i>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
<div class="like-count floats">働いてみたい！<%= @wants_count %>件</div>
