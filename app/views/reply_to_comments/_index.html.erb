<div class="indent">
  <% @reply_to_comments.each do |reply| %>
    <% if reply.comment_to_post_id == comment.id %>
      <p>
        <% if reply.user.user_image.present? %>
          <%= image_tag reply.user.user_image_url %>
        <% else %>
          <%= image_tag 'default.png' %>
        <% end %>
        <%= link_to "#{reply.user.name}さん", user_path(reply.user.id) %>
      </p>
      <p>返信内容：<%= reply.reply_to_comment_content %></p>
      <% if reply.user == current_user %>
        <p><%= link_to '返信を削除する', post_comment_to_post_reply_to_comment_path(reply.post_id, reply.comment_to_post_id, reply.id), method: :delete, class: 'btn btn-light btn-sm', remote: true %></p>
      <% end %>
    <% end %>
  <% end %>
  <% if user_signed_in? %>


    <%= form_with(model: [@post, comment, ReplyToComment.new]) do |form| %>
      <% if @reply_to_comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@reply_to_comment.errors.count, "error") %> prohibited this reply_to_comment from being saved:</h2>

          <ul>
          <% @reply_to_comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.text_area :reply_to_comment_content, :placeholder => '返信をしてみましょう！', class:'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit "返信をする", class:"btn btn-primary btn-sm" %>
      </div>
    <% end %>


  <% end %>
</div>
