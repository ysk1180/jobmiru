
<% comment_to_posts.each do |comment| %>
  <% unless comment.id.nil? %>
    <div class="card-body">
      <div class="card">
        <div class="card-body">
          <p>
            <% if comment.user.user_image.present? %>
              <%= image_tag comment.user.user_image_url %>
            <% else %>
              <%= image_tag 'default.png' %>
            <% end %>
            <%= link_to "#{comment.user.name}さん", user_path(comment.user.id) %>
          </p>
          <p>コメント：<%= comment.comment_to_post_content %></p>
          <% if comment.user == current_user %>
            <p><%= link_to 'コメントを削除する', post_comment_to_post_path(comment.post_id, comment.id), method: :delete, class: 'btn btn-light btn-sm', remote: true %></p>
          <% end %>

          <!-- コメントへの返信 -->
          <%= render partial: 'reply_to_comments/index', locals: { comment: comment} %>

        </div>
      </div>
    </div>
  <% end %>
<% end %>
