
<%= form_with(model: contact, local: true) do |form| %>
<% if contact.errors.any? %>
  <div class="alert alert-danger" role="alert"><strong>赤枠となっている項目をご確認ください。</strong></div>
  <br>
<% end %>

  <div class="form-group">
    <%= form.label :name, class: "label-inline" %><span class="badge badge-pill badge-danger">必須</span>
    <%= form.text_field :name, id: :contact_name, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "label-inline" %><span class="badge badge-pill badge-danger">必須</span>
    <%= form.text_field :email, id: :contact_email, class:'form-control' %>
    <small class="text-muted">こちらのメールアドレスにお返事させていただきます。</small>
  </div>

  <div class="form-group">
    <%= form.label :content, class: "label-inline" %><span class="badge badge-pill badge-danger">必須</span>
    <%= form.text_area :content, id: :contact_content, class:'form-control', rows:"3" %>
  </div>

  <div class="actions">
    <%= form.submit "送信", class:"btn standard-button" %>
  </div>
<% end %>
