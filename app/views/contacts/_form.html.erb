
<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name, :placeholder => '必須', class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email, :placeholder => '必須', class:'form-control' %>
    <small class="text-muted">こちらのメールアドレスにお返事させていただきます。</small>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :contact_content, :placeholder => '必須', class:'form-control', rows:"3" %>
  </div>

  <div class="actions">
    <%= form.submit "送信", class:"btn btn-primary" %>
  </div>
<% end %>
